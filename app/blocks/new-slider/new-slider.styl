.new-slider
	position relative
	margin-top 16px
	padding-top 35px
	padding-right 20px
	padding-left 20px
	min-height 160px
	border 1px solid $kz-grey
	border-radius 4px

	+below(860px)
		display inline-block
		width 50%
		vertical-align top

	+below(760px)
		width 100%

	&__image
	&__text
		display inline-block
		font-size 12px
		color $kz-blue-lt

	&__image
		width 35%

	&__text
		padding-top 6%
		max-width 63%
		vertical-align top

	&__price
		margin-top 10%
		display block
		color $kz-black
		font-weight bold

	&__arrow
		position absolute
		top 45%
		size 19px
		border-right 3px solid $kz-grey
		border-bottom 3px solid $kz-grey
		cursor pointer

		&_next
			right 2%
			transform rotate(-45deg)

		&_prev
			left 2%
			transform rotate(135deg)

