.brand-filter
	display inline-block
	font-size 0

	+below(1000px)
		padding-top .4%
		float left

	+below(860px)
		float none
		padding-top 0

	+below(760px)
		display block
		margin-bottom 20px

	&__item
		padding 5px 10px
		display inline-block
		font-size 13px
		font-weight bold
		border 1px solid $kz-grey-dk
		cursor pointer

		+below(760px)
			font-size 3.2vw

		&.is-active
		&:active
			color $kz-white
			background-color $kz-orange
			box-shadow rgba(0,0,0,0.5) 0 2px 2px inset

		&_all
			border-right none
			border-top-left-radius 12px
			border-bottom-left-radius 12px

		&_optima
			border-left none
			border-top-right-radius 12px
			border-bottom-right-radius 12px

