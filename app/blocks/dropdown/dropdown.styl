.dropdown
	position relative
	display inline-block
	cursor pointer

	&.is-active
		.dropdown__popup
			opacity 1
			z-index 100

	&_icon_left
		padding-left 15px

	&_icon_right
		padding-right 20px

	&_type_round
		margin-left -4px
		padding 0 14px
		height 25px
		line-height 23px
		display inline-block
		color $kz-orange
		border 1px solid $kz-grey-dk
		border-radius 12px
		background-color $kz-orange
		border-top-left-radius 0
		border-bottom-left-radius 0
		border-left-color #fff

	&__text
		font-size 12px
		font-weight bold

		&_dashed
			border-bottom 1px dashed $kz-black

		&_solid
			border-bottom 1px solid $kz-black

		&_blue
			color $kz-blue-lt

	&__icon
		position absolute

		&_type_angle-grey
			top 1px
			right 5px
			size 8px
			border-right 2px solid $kz-grey-dk
			border-bottom 2px solid $kz-grey-dk
			transform rotate(45deg)

		&_type_angle-black
			top 0
			right 2px
			size 9px
			border-right 2px solid $kz-black
			border-bottom 2px solid $kz-black
			transform rotate(45deg)

		&_type_angle-white
			top 4px
			right 10px
			size 9px
			border-right 2px solid $kz-white
			border-bottom 2px solid $kz-white
			transform rotate(45deg)

		&_type_city
			top 0
			left 0
			size 15px
			background-repeat no-repeat
			background-size 11px 16px
			background-color $kz-blue

	&__popup
		position absolute
		z-index -1
		left -19px
		top 20px
		padding 15px 11px 6px 11px
		width 195px
		font-size 11px
		text-align left
		background-color $kz-grey-lt
		border-radius 3px 3px 0 0
		box-shadow 1px 3px 6px rgba(70,70,70,0.2)
		opacity 0
		transition opacity .3s ease

		&::before
			position absolute
			left 50%
			top -10px
			size 0
			border-style solid
			border-width 0 5px 10px 5px
			border-color transparent transparent $kz-grey-lt transparent

