.main-slider
	margin 0

	&__title
		padding: 14px 0 10px;
		position relative
		z-index 10
		color $kz-white
		font-family $kz-title
		text-align center
		border-bottom 1px solid #dcdcdc
		text-shadow #737373 1px 0px, #737373 1px 1px, #737373 0px 1px, #737373 -1px 1px, #737373 -1px 0px, #737373 -1px -1px, #737373 0px -1px, #737373 1px -1px

	&__item
		padding 0 10px
		position relative
		height 333px

	&__image
		position absolute
		top 0
		bottom 0
		left 0
		right 0
