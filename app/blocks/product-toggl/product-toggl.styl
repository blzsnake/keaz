.product-toggl
	margin-top 10px
	margin-right 5px
	padding 2px 7px
	display inline-block
	font-size 13px
	text-align left
	border-radius 4px
	background-color $kz-under-slider-dk
	box-shadow rgba(0,0,0,0.2) 0 0px 1px
	cursor pointer

	&.is-active
		background-color #fde76b
		box-shadow rgba(0,0,0,0.4) 0 2px 2px inset

	&__check
		visibility hidden
		width 0
		height 0
