include ../../../node_modules/bemto.jade/bemto.jade
include ../row/row
include ../col/col
include ../menu/menu
include ../logo/logo
include ../prod-search/prod-search
include ../prod-check/prod-check
include ../btn/btn
include ../new-slider/new-slider
include ../dropdown/dropdown
include ../brand-filter/brand-filter
include ../title/title
include ../product-filter/product-filter
include ../prod-preview/prod-preview

mixin ui-kit()
	- menu = getData('menu')
	+b.ui-kit
		+e.row
			+e.title Main menu
			+row
				+menu(menu)
		+e.row
			+e.title Logo
			+row
				+col
					+logo('assets/images/logo_optima.png')(class='logo_size_huge')
				+col
					+logo('assets/images/logo.png')(class='logo_size_big')
				+col
					+logo('assets/images/logo_middle.png')(class='logo_size_middle')
				+col
					+logo('assets/images/logo_optima.png')(class='logo_size_big')
				+col
					+logo('assets/images/logo_optima_middle.png')(class='logo_size_middle')

		+e.row
			+e.title Button
			+row
				+col
					+btn({href:jv0, value:'Войти'})
				+col
					+btn({href:jv0, value:'Подбор по аналогам'})
				+col
					+btn({href:jv0, value:'Заказать', mod:'square'})
				+col
					+btn({href:jv0, value:'Корзина (0)', mod:'round'})
					+dropdown({
						mod:'round',
						text: '.',
						icon: {
							type:'angle-white'
							}
						})
		+e.row
			+e.title Dropdown
			+row
				+col
					+dropdown({
						type:'dashed',
						text:'Москва',
						icon: {
							pos:'both',
							type:'angle-grey',
							type2:'city'
							}
						})
				+col
					+dropdown({
						mod:'round',
						text:'.',
						icon: {
							type:'angle-white'
							}
						})
				+col
					+dropdown({
						type:'dashed',
						text:'Прайс-листы',
						icon: {
							pos:'right',
							type:'angle-grey'
							}
						})
				+col
					+dropdown({
						type:'dashed',
						text:'Контакты',
						icon: {
							pos:'right',
							type:'angle-grey'
							}
						})
				+col
					+dropdown({
						type:'solid',
						text:'Все сферы применения',
						icon: {
							pos:'right',
							type:'angle-black'
							}
						})

		+e.row
			+e.title UI-Components
			+row
				+col
					+prod-check({label:'some Check'})
			+row
				+col
					+prod-search({place:'custom placeholder'})
			+row
				+col
					+brand-filter([
						{type:'all',text:'1',mod:'list'},
						{type:'optima',text:'2',mod:'list'}])
			+row
				+col
					+prod-preview(
						{
							main:'/assets/images/catalog/tile-1.jpg',
							dots:[
								['/assets/images/catalog/tile-1.jpg',1],
								['/assets/images/catalog/tile-1.jpg',0],
								['/assets/images/catalog/tile-1.jpg',0]
							]
						})
			+row
				+col
					+product-filter
					+product-filter(
					{title:'Технические характеристики'},
					[
						{
							opt:'Частота тока(Гц)',
							check:
								[
									{label:'50',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50/60',name:'spec',val:'50/60'}
								]
						},
						{
							opt:'Частота тока(Гц)',
							check:
								[
									{label:'50',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50/60',name:'spec',val:'50/60'}
								]
						},
						{
							opt:'Частота тока(Гц)',
							check:
								[
									{label:'50',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50',name:'spec',val:'50'},
									{label:'AC/DC',name:'spec',val:'400'},
									{label:'LOnglong long',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50',name:'spec',val:'50'},
									{label:'400',name:'spec',val:'400'},
									{label:'50/60',name:'spec',val:'50/60'}
								]
						},
					])


		+e.row
			+e.title Titles
			+row
				+col
					+title({tag:'h1', val:'Продукция'})
				+col
					+title({tag:'h3', val:'Новости', mod:'small'})
				+col
					+title({tag:'h3', val:'Категории', mod:'middle'})

		+e.row
			+e.title Filter Buttons
				+row
					+col
						+b.filter-btns
							button(type="reset" class="reset").
								Сброс
							button(type="submit" class="submit").
								<i class="fa fa-search"></i>
								Показать
