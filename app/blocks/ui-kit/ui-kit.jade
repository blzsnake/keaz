include ../../../node_modules/bemto.jade/bemto.jade
include ../row/row
include ../col/col
include ../menu/menu
include ../logo/logo
include ../btn/btn
include ../new-slider/new-slider
include ../dropdown/dropdown
include ../brand-filter/brand-filter
include ../title/title

mixin ui-kit()
	- menu = getData('menu')
	+b.ui-kit
		+e.row
			+e.title Main menu
			+row
				+menu(menu)
		+e.row
			+e.title Logo
			+row
				+col
					+logo('assets/images/logo.png')(class='logo_size_big')
				+col
					+logo('assets/images/logo_middle.png')(class='logo_size_middle')
				+col
					+logo('assets/images/logo_optima.png')(class='logo_size_big')
				+col
					+logo('assets/images/logo_optima_middle.png')(class='logo_size_middle')

		+e.row
			+e.title Button
			+row
				+col
					+btn({href:jv0, value:'Войти'})
				+col
					+btn({href:jv0, value:'Подбор по аналогам'})
				+col
					+btn({href:jv0, value:'Корзина (0)', mod:'_round'})
					+dropdown({
						mod:'round',
						text: '.',
						icon: {
							type:'angle-white'
							}
						})
		+e.row
			+e.title Dropdown
			+row
				+col
					+dropdown({
						type:'dashed',
						text:'Москва',
						icon: {
							pos:'both',
							type:'angle-grey',
							type2:'city'
							}
						})
				+col
					+dropdown({
						mod:'round',
						text:'.',
						icon: {
							type:'angle-white'
							}
						})
				+col
					+dropdown({
						type:'dashed',
						text:'Прайс-листы',
						icon: {
							pos:'right',
							type:'angle-grey'
							}
						})
				+col
					+dropdown({
						type:'dashed',
						text:'Контакты',
						icon: {
							pos:'right',
							type:'angle-grey'
							}
						})
				+col
					+dropdown({
						type:'solid',
						text:'Все сферы применения',
						icon: {
							pos:'right',
							type:'angle-black'
							}
						})

		+e.row
			+e.title UI-Components
			+row
				+col
					+brand-filter
					+b.tabs
						+e.control
							+e.switch.js-switch
								+dropdown({
									type:'dashed',
									text:'Описание',
									icon: {
										pos:'right',
										type:'angle-grey'
										}
									})
							+e.switch.js-switch
								+dropdown({
									type:'dashed',
									text:'Комментарии',
									icon: {
										pos:'right',
										type:'angle-grey'
										}
									})
						+e.container
							+e('p').text
								| Блочный автоматический выключатель - это коммутационный аппарат, предназначенный для проведения тока в
								| нормальном режиме, защиты оборудования и силовой цепи при возникновении перегрузки или короткого замыкания.
							+e('p').text
								| In: 0,6 - 2000 А;
								br
								| Un: - до 1000 В переменного тока при частоте от 50 до 400 Гц;
							+e('ul').list
								+e('li').list-item - до 600 В постоянного тока;
							+e('p').text Виды расцепителей:
							+e('ul').list
								+e('li').list-item - электромагнитные расцепители с гидравлическим замедлением срабатывания;
								+e('li').list-item - темомагнитные (электромагнитный + тепловой);
								+e('li').list-item - полупроводниковые расцепители.
							+e('p').text
								| Широкий ассортимент аксессуаров, комплектов зажимов и дополнительных устройств.
						+e.container
							+e('p').text
								| Блочный автоматический выключатель - это коммутационный аппарат, предназначенный для проведения тока в
								| нормальном режиме, защиты оборудования и силовой цепи при возникновении перегрузки или короткого замыкания.
							+e('p').text
								| In: 0,6 - 2000 А;
								br
								| Un: - до 1000 В переменного тока при частоте от 50 до 400 Гц;
							+e('ul').list
								+e('li').list-item - до 600 В постоянного тока;
							+e('p').text Виды расцепителей:
							+e('ul').list
								+e('li').list-item - электромагнитные расцепители с гидравлическим замедлением срабатывания;
								+e('li').list-item - темомагнитные (электромагнитный + тепловой);
								+e('li').list-item - полупроводниковые расцепители.
							+e('p').text
								| Широкий ассортимент аксессуаров, комплектов зажимов и дополнительных устройств.

		+e.row
			+e.title Titles
			+row
				+col
					+title({tag:'h1', val:'Продукция'})
				+col
					+title({tag:'h3', val:'Новости', mod:'small'})
				+col
					+title({tag:'h3', val:'Категории', mod:'middle'})
		
		+e.row
			+e.title Filter Buttons
				+row
					+col
						+e.filter-btns
							button(type="reset" class="reset").
								Сброс
							button(type="submit" class="submit").
								<i class="fa fa-search"></i>
								Показать				