.footer
	border-radius 0 0 4px 4px
	background-color $kz-grey	
	
	&__wrapper
		max-width 1200px
		margin 0 auto
		
	&__section			
		font-size 14px
		input
			padding 5px 10px 5px 30px
			border 0
		button
			padding 5px
			border 0			
			margin-left -5px
			color $kz-white
			transition all .3s ease-in-out 
			&:hover
				box-shadow 2.5px 4.33px 16px 0px rgba(255,255,255,0.92)
				transition all .3s ease-in-out
						
		&_search
			display inline-block
			width 49%
			padding 12px			
			background $kz-footer-search	
			box-shadow 2.5px 4.33px 16px 0px rgba(255,255,255,0.92)
			input
				width 75%
			button
				width 15%
				background $kz-blue				
			
		&_subscribe
			display inline-block
			width 49%
			padding 12px
			background $kz-footer-subscribe
			box-shadow 2.5px 4.33px 16px 0px rgba(255,255,255,0.92)
			p
				display inline-block
				font-size 12px
				font-weight 700
				margin-right 4%
			input
				width 45%
			button
				width 20%
				background $kz-orange
				
		&_sitemap
			display inline-block
			margin 25px 0
			width 78%
			vertical-align top
			
			.footer__list
				display inline-block
				vertical-align top
				margin-right 45px
				font-size 15px
				
				.footer__title
					font-weight 700
					margin-bottom 10px
					
				.footer__item
					margin-bottom 10px
					
				.footer__link
					text-decoration none
					color #000
					transition all .3s ease-in-out
					&:hover
						color $kz-orange
						transition all .3s ease-in-out
						

				
		&_social
			display inline-block
			margin 25px 0
			width 20%
			font-size 0
			.social__link
				display inline-block
				width 50px
				height 50px
				padding 10px
				margin 0 10px 10px 0
				font-size 12px
				color $kz-white
				
				&:hover
					box-shadow 2.5px 4.33px 16px 0px #fff
				
				&_vk
					background $kz-social-vk
					
				&_facebook
					background $kz-social-fb
					
				&_instagram
					background $kz-social-insta
					
				&_twitter
					background $kz-social-tw
					
				&_youtube
					background $kz-social-yt
					
				&_gplus
					background $kz-social-gp
					
				&_odnoklassniki
					background $kz-social-ok
					
				&_rss
					background $kz-social-rss